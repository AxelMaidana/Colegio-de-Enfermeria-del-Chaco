<!-- Modal de registro -->
<div id="register-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 opacity-0 pointer-events-none transition-opacity duration-300">
  <div class="bg-white text-customBlack p-4 sm:p-6 md:p-8 rounded-3xl shadow-lg max-w-lg w-full transform transition-transform duration-300 scale-90 translate-y-4 relative z-60">
    <h2 class="text-xl sm:text-2xl text-center font-bold mt-2 mb-6">INSCRIPCION</h2>
    <form action="/api/auth/register" method="post" id="register-form" class="grid grid-cols-1">
      <div class="mb-4 flex flex-col sm:flex-row gap-4">
        <div class="w-full">
          <label for="name" class="block text-lg font-bold">Nombre</label>
          <input type="text" id="name" name="name" class="border border-customBlack rounded-2xl w-full p-2" required />
        </div>
        <div class="w-full">
          <label for="lastName" class="block text-lg font-bold">Apellido</label>
          <input type="text" id="lastName" name="lastName" class="border border-customBlack rounded-2xl w-full p-2" required />
        </div>
      </div>
      <div class="mb-4">
        <label for="dni" class="block text-lg font-bold">DNI</label>
        <input type="text" id="dni" name="dni" class="border border-customBlack rounded-2xl w-full p-2" required />
      </div>
      <div class="mb-4">
        <label for="matricula" class="block text-lg font-bold">Matrícula</label>
        <input type="text" id="matricula" name="matricula" class="border border-customBlack rounded-2xl w-full p-2" required />
      </div>
      <div class="mb-4">
        <label for="lugarDeOrigen" class="block text-lg font-bold">Lugar de Origen</label>
        <input type="text" id="lugarDeOrigen" name="lugarDeOrigen" class="border border-customBlack rounded-2xl w-full p-2" />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-lg font-bold">Email</label>
        <input type="email" id="email" name="email" class="border border-customBlack rounded-2xl w-full p-2" required />
      </div>
      <div class="mb-4">
        <label for="password" class="block text-lg font-bold">Contraseña</label>
        <input type="password" id="password" name="password" class="border border-customBlack rounded-2xl w-full p-2" required />
      </div>
      <div class="mb-4">
        <label for="birthdate" class="block text-lg font-bold">Fecha de Nacimiento</label>
        <input type="date" id="birthdate" name="birthdate" class="border border-customBlack rounded-2xl w-full p-2" required />
      </div>
      <div class="mb-4">
        <label for="role" class="block text-lg font-bold">Rol</label>
        <select id="role" name="role" class="border border-customBlack rounded-2xl w-full p-2" required>
          <option value="">Seleccione un rol</option>
          <option value="admin">Admin</option>
          <option value="user">Usuario</option>
          <option value="guest">Invitado</option>
        </select>
      </div>
      <div class="mb-4">
        <label for="infoExtra" class="block text-lg font-bold">Información Extra</label>
        <textarea id="infoExtra" name="infoExtra" class="border border-customBlack rounded-2xl w-full p-2" rows="2"></textarea>
      </div>
      <div class="flex justify-center flex-col items-center mt-6 mb-2">
        <button id="register-btn" class="bg-customBlue transition duration-300 hover:scale-105 text-white text-sm font-semibold px-6 py-3 rounded-2xl w-full">FINALIZAR INSCRIPCION</button>
      </div>
      <p class="text-red-500 font-semibold" id="register-error-message" style="display: none;"></p>
    </form>
  </div>
</div>



<script>
  const form = document.getElementById("register-form") as HTMLFormElement | null;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault(); // Evita la redirección automática

    const formData = new FormData(form);

    try {
      const response = await fetch(form.action, {
        method: "POST",
        body: formData,
      });

      const result = await response.json();

      if (!response.ok) {
        const errorMessage = result.error || "Ocurrió un error inesperado.";
        const errorElement = document.getElementById("register-error-message") as HTMLParagraphElement | null;
        if (errorElement) {
          errorElement.innerText = errorMessage;
          errorElement.style.display = "block"; // Muestra el mensaje de error
        }
      } else {
        // Redirigir a la página de inicio de sesión
        window.location.href = "/routes/dashboard";
      }
    } catch (error) {
      console.error("Error en la solicitud de registro:", error);
      const errorElement = document.getElementById("register-error-message") as HTMLParagraphElement | null;
      if (errorElement) {
        errorElement.innerText = "Error al conectar con el servidor. Intenta nuevamente.";
        errorElement.style.display = "block";
      }
    }
  });
</script>
<script src="/src/components/js/modalRegistro.js"></script>
