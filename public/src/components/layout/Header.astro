<header class="bg-customBlue text-white py-4">
  <div class="container mx-auto flex flex-row justify-between items-center px-2 py-4 space-x-4">
    <!-- Logo y Título en columna en pantallas pequeñas y fila en pantallas grandes -->
    <div class="flex gap-3 items-center md:flex-row md:items-center space-y-2 md:space-y-0 md:space-x-4">
      <!-- Logo con tamaño ajustado para pantallas móviles -->
      <img src="/images/cech-logo.png" alt="Logo CECH" class="h-16 w-auto md:h-16" />
      <!-- Título alineado a la derecha de la imagen en móviles -->
      <h1 class="text-left text-sm font-bold leading-tight md:text-lg md:text-center">
        Colegio de Enfermería<br>
        <span class="block text-left">del Chaco</span>
      </h1>
    </div>

    <!-- Botones ajustados para móviles, en fila en pantallas grandes -->
    <div class="flex flex-col space-y-2 md:space-y-0 md:flex-row md:space-x-2">
      <button class="bg-customBlue border-2 border-[#00a6ce] text-white py-1 px-3 rounded-full text-sm w-full md:w-auto md:py-2 md:px-4">
        REGÍSTRATE
      </button>
      <button class="bg-[#00a6ce] border-2 border-[#00a6ce] text-white py-1 px-3 rounded-full text-sm w-full md:w-auto md:py-2 md:px-4">
        INICIAR SESIÓN
      </button>
    </div>
  </div>
</header>
